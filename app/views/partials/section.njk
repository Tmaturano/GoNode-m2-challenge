<article>
  {% if selectedSection !== undefined %}
    <div class="project-header">
      <h1>{{ selectedSection.title }}</h1>

      {% if selectedSection.id == activeSection %}
        <div class="edit-section">
          <a href="#" data-modal-open="#modal-edit-section" class="btn btn-edit" title="Editar Seção">
            <i class="far fa-edit"></i>
          </a>
        </div>
        <form action="/app/projects/{{ project.id }}/section/{{ selectedSection.id }}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger" title="Apagar Seção">
            <i class="fas fa-trash"></i>
          </button>
        </form>
      {% endif %}
    </div>
    <p>{{ selectedSection.formattedContent | safe }}</p>
  {% endif %}
</article>

<div class="modal" id="modal-edit-section">
  <form class="modal-content" method="POST" action="/app/projects/{{ project.id }}/section/{{ selectedSection.id }}?_method=PUT">
    <input type="text" name="title" placeholder="Título da seção" value="{{ selectedSection.title }}">

    <div class="content-container">
      <textarea name="content" class="mde" placeholder="Conteúdo da seção">{{ selectedSection.content }}</textarea>
    </div>

    <button type="submit">SALVAR</button>
    <a href="#" data-modal-close="#modal-edit-section">CANCELAR</a>
  </form>
</div>
